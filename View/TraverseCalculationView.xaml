<UserControl x:Class="Nivtropy.Views.TraverseCalculationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Nivtropy.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:MethodDeltaConverter x:Key="MethodDeltaConverter" />
        <converters:GroupClosureConverter x:Key="GroupClosureConverter" />
        <converters:ArmDifferenceExceededToBrushConverter x:Key="ArmDifferenceExceededToBrushConverter" />
        <CollectionViewSource x:Key="RowsGrouped" Source="{Binding Rows}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LineName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="8,8,8,4"
                    Orientation="Horizontal">
            <TextBlock Text="Расчёт нивелирного хода"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Margin="24,0,0,0">
                <TextBlock Text="Метод:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding SelectedMethod.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                <TextBlock Text="Класс:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding SelectedClass.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="8,4,8,4" Orientation="Horizontal">
            <TextBlock Text="Станций:" FontWeight="SemiBold" VerticalAlignment="Center" />
            <TextBlock Text="{Binding StationsCount}" Margin="4,0,0,0" VerticalAlignment="Center" />
            <TextBlock Text="•" Margin="12,0,12,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="ΣΔh:" FontWeight="SemiBold" VerticalAlignment="Center" />
            <TextBlock Text="{Binding Closure, StringFormat=+0.0000;-0.0000;0.0000}" Margin="4,0,0,0" VerticalAlignment="Center" />
            <TextBlock Text="м" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="•" Margin="12,0,12,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="Допуск невязки:" FontWeight="SemiBold" VerticalAlignment="Center" />
            <TextBlock Text="{Binding AllowableClosure, StringFormat=0.0000}" Margin="4,0,0,0" VerticalAlignment="Center" />
            <TextBlock Text="м" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="•" Margin="12,0,12,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="Длина (назад):" FontWeight="SemiBold" VerticalAlignment="Center" />
            <TextBlock Text="{Binding TotalBackDistance, StringFormat=0.00}" Margin="4,0,0,0" VerticalAlignment="Center" />
            <TextBlock Text="м" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="•" Margin="12,0,12,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="Длина (вперёд):" FontWeight="SemiBold" VerticalAlignment="Center" />
            <TextBlock Text="{Binding TotalForeDistance, StringFormat=0.00}" Margin="4,0,0,0" VerticalAlignment="Center" />
            <TextBlock Text="м" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="•" Margin="12,0,12,0" VerticalAlignment="Center" Foreground="#FF606060" />
            <TextBlock Text="Общая длина:" FontWeight="SemiBold" VerticalAlignment="Center" />
            <TextBlock Text="{Binding TotalAverageLength, StringFormat=0.00}" Margin="4,0,0,0" VerticalAlignment="Center" />
            <TextBlock Text="м" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="#FF606060" />
        </StackPanel>

        <!-- Панель управления реперами (точками с известными высотами) -->
        <Expander Grid.Row="2" Margin="8,4,8,4" IsExpanded="True" BorderBrush="#FF6B9BD1" BorderThickness="1">
            <Expander.Header>
                <StackPanel Orientation="Horizontal" Background="#FFF0F4FF" Margin="-4">
                    <TextBlock Text="Реперы (точки с известными высотами)" FontWeight="SemiBold" Margin="8,4" />
                    <TextBlock Text="•" Margin="8,4" Foreground="#FF606060" />
                    <TextBlock Text="Всего:" Margin="0,4" />
                    <TextBlock Text="{Binding Benchmarks.Count}" FontWeight="SemiBold" Margin="4,4,8,4" />
                </StackPanel>
            </Expander.Header>
            <StackPanel Margin="8" Background="White">
                <!-- Добавление нового репера -->
                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="8" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Точка:" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <ComboBox Grid.Column="1" ItemsSource="{Binding AvailablePoints}"
                                  SelectedItem="{Binding SelectedPoint, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  VerticalAlignment="Center" Margin="0,0,16,0" />
                        <TextBlock Grid.Column="2" Text="Высота Z, м:" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <TextBox Grid.Column="3" Text="{Binding NewBenchmarkHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center" Margin="0,0,8,0" />
                        <Button Grid.Column="4" Content="Добавить" Padding="12,4"
                                Command="{Binding AddBenchmarkCommand}" />
                    </Grid>
                </Border>

                <!-- Список реперов -->
                <TextBlock Text="Установленные реперы:" FontWeight="SemiBold" Margin="0,0,0,4" />
                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" MaxHeight="150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Benchmarks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="8,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding DisplayName}" VerticalAlignment="Center" />
                                            <Button Grid.Column="1" Content="✕" Width="24" Height="24"
                                                    Command="{Binding DataContext.RemoveBenchmarkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#FFFAFAFA" BorderBrush="#FFCCCCCC"
                                                    ToolTip="Удалить репер" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <TextBlock Text="(Реперы группируются по ходам. Высоты автоматически применяются при расчётах.)"
                           Foreground="Gray" FontStyle="Italic" Margin="0,4,0,0" />
            </StackPanel>
        </Expander>

        <Border Grid.Row="3" Margin="8" BorderBrush="#FFB0B0B0" BorderThickness="1">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Padding="4"
                           Background="#FFEAEAEA"
                           Text="{Binding ClosureVerdict}" />
                <DataGrid x:Name="RowsGrid"
                          ItemsSource="{Binding Source={StaticResource RowsGrouped}}"
                          SelectedItem="{Binding SelectedRow, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Margin="0"
                          RowHeaderWidth="0"
                          EnableRowVirtualization="True"
                          SelectionUnit="FullRow">
                    <DataGrid.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="GroupItem">
                                    <Setter Property="Margin" Value="0,4,0,0" />
                                </Style>
                            </GroupStyle.ContainerStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD" BorderBrush="#90CAF9" BorderThickness="1" Padding="8" CornerRadius="4">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Text=" • Станций: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding ItemCount}" FontWeight="SemiBold" />
                                            <TextBlock Text=" • ΣΔh: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding Converter={StaticResource GroupClosureConverter}, StringFormat=+0.0000;-0.0000;0.0000}"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF1976D2" />
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                            <TextBlock Text=" • Длина назад: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding Items[0].LineSummary.TotalDistanceBack, StringFormat=0.00}" FontWeight="SemiBold" />
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                            <TextBlock Text=" • Длина вперёд: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding Items[0].LineSummary.TotalDistanceFore, StringFormat=0.00}" FontWeight="SemiBold" />
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                            <TextBlock Text=" • Общая длина: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding Items[0].LineSummary.TotalAverageLength, StringFormat=0.00}" FontWeight="Bold" Foreground="#FF1976D2" />
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                            <TextBlock Text=" • Σ|разность плеч|: " Foreground="#FF606060" Margin="12,0,0,0" />
                                            <TextBlock Text="{Binding Items[0].LineSummary.ArmDifferenceAccumulation, StringFormat=0.0000}"
                                                       FontWeight="Bold">
                                                <TextBlock.Foreground>
                                                    <Binding Path="Items[0].LineSummary.IsArmDifferenceAccumulationExceeded"
                                                             Converter="{StaticResource ArmDifferenceExceededToBrushConverter}" />
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <DataGridRowsPresenter />
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>
                        </GroupStyle>
                    </DataGrid.GroupStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding Index}" Width="60">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Номер станции в пределах хода" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Точка" Binding="{Binding ForeCode}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Код передней точки (для которой рассчитана высота)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Станция" Binding="{Binding Station}" Width="180">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Переход: задняя точка → передняя точка" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Длина станции, м" Binding="{Binding StationLength_m, StringFormat=0.00}" Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Сумма визирных лучей: HDback + HDfore" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Разность плеч, м" Binding="{Binding ArmDifference_m, StringFormat=0.0000}" Width="130">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Неравенство плеч: |HDback - HDfore|" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsArmDifferenceExceeded}" Value="True">
                                            <Setter Property="Foreground" Value="Red" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Δh, м" Binding="{Binding DeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Превышение: Rb - Rf (расчитанное значение)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Поправка, м" Binding="{Binding Correction, StringFormat=+0.0000;-0.0000;0.0000}" Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Поправка для распределения невязки" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Δh испр., м" Binding="{Binding AdjustedDeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Исправленное превышение (с учётом поправки)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Z, м" Binding="{Binding ForeHeightDisplay}" Width="150">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Высота передней точки (известная или рассчитанная)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
