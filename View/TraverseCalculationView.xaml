<UserControl x:Class="Nivtropy.Views.TraverseCalculationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Nivtropy.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="RootControl">
    <UserControl.Resources>
        <converters:MethodDeltaConverter x:Key="MethodDeltaConverter" />
        <converters:GroupClosureConverter x:Key="GroupClosureConverter" />
        <converters:ArmDifferenceExceededToBrushConverter x:Key="ArmDifferenceExceededToBrushConverter" />
        <converters:GridLineColorConverter x:Key="GridLineColorConverter" />
        <CollectionViewSource x:Key="RowsGrouped" Source="{Binding Rows}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LineName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <!-- Основное содержимое -->
        <Grid x:Name="MainContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="8,8,8,4"
                    Orientation="Horizontal">
            <TextBlock Text="Расчёт нивелирного хода"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Margin="24,0,0,0">
                <TextBlock Text="Метод:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding SelectedMethod.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                <TextBlock Text="Класс:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding SelectedClass.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <!-- Панель статистики с иконками -->
        <StackPanel Grid.Row="1" Margin="8,4,8,4" Orientation="Horizontal">
            <!-- Станций -->
            <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#FF2196F3" />
            <TextBlock Text="Станций:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding StationsCount}" Margin="4,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#FF606060" />

            <!-- Невязка с цветовой индикацией -->
            <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#FFFF9800" />
            <TextBlock Text="ΣΔh:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Closure, StringFormat=+0.0000;-0.0000;0.0000}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsClosureWithinTolerance}" Value="True">
                                <Setter Property="Foreground" Value="#FF4CAF50" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsClosureWithinTolerance}" Value="False">
                                <Setter Property="Foreground" Value="#FFF44336" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#FF606060" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#FF606060" />

            <!-- Допуск -->
            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#FF9C27B0" />
            <TextBlock Text="Допуск:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding AllowableClosure, StringFormat=±0.0000}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#FF606060" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#FF606060" />

            <!-- Длина -->
            <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#FF00BCD4" />
            <TextBlock Text="Длина:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding TotalAverageLength, StringFormat=0.00}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#FF606060" />
        </StackPanel>

        <Border Grid.Row="2" Margin="8" BorderBrush="#FFB0B0B0" BorderThickness="1">
            <DataGrid x:Name="RowsGrid"
                      ItemsSource="{Binding Source={StaticResource RowsGrouped}}"
                      SelectedItem="{Binding SelectedRow, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="0"
                      RowHeaderWidth="0"
                      EnableRowVirtualization="True"
                      SelectionUnit="FullRow"
                      FontFamily="{Binding Settings.TableFontFamily}"
                      FontSize="{Binding Settings.TableFontSize}"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}"
                      HorizontalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}">
                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Setter Property="AlternatingRowBackground" Value="Transparent" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Settings.AlternatingRowColors}" Value="True">
                                    <Setter Property="AlternatingRowBackground" Value="#FFF9F9F9" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>
                    <!-- Стили для улучшения внешнего вида -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="TextBlock.TextAlignment" Value="Center" />
                            <Setter Property="Padding" Value="4,8,4,8" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FFF0F0F0" />
                            <Setter Property="Foreground" Value="#FF333333" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Padding" Value="8,10,8,10" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="BorderThickness" Value="0,0,0,2" />
                            <Setter Property="BorderBrush" Value="#FFD0D0D0" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="MinHeight" Value="32" />
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="GroupItem">
                                    <Setter Property="Margin" Value="0,4,0,0" />
                                </Style>
                            </GroupStyle.ContainerStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD" BorderBrush="#90CAF9" BorderThickness="1" Padding="8" CornerRadius="4">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Кнопка-кружок с восклицательным знаком -->
                                            <Button x:Name="TraverseInfoButton"
                                                    Width="24" Height="24"
                                                    Margin="0,0,8,0"
                                                    Padding="0"
                                                    Background="#FF1976D2"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Показать детали хода"
                                                    Tag="{Binding Name}"
                                                    Click="ShowTraverseDetails_Click">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="12"
                                                                Width="24"
                                                                Height="24">
                                                            <TextBlock Text="&#xE783;"
                                                                       FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="14"
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FF1565C0" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Text=" • Станций: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding ItemCount}" FontWeight="SemiBold" />
                                            <TextBlock Text=" • ΣΔh: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding Converter={StaticResource GroupClosureConverter}, StringFormat=+0.0000;-0.0000;0.0000}"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF1976D2" />
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                            <TextBlock Text=" • Длина: " Margin="12,0,0,0" Foreground="#FF606060" />
                                            <TextBlock Text="{Binding Items[0].LineSummary.TotalAverageLength, StringFormat=0.00}" FontWeight="Bold" Foreground="#FF1976D2" />
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                            <TextBlock Text=" • Σ|разность плеч|: " Foreground="#FF606060" Margin="12,0,0,0" />
                                            <TextBlock Text="{Binding Items[0].LineSummary.ArmDifferenceAccumulation, StringFormat=0.0000}"
                                                       FontWeight="Bold">
                                                <TextBlock.Foreground>
                                                    <Binding Path="Items[0].LineSummary.IsArmDifferenceAccumulationExceeded"
                                                             Converter="{StaticResource ArmDifferenceExceededToBrushConverter}" />
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock Text=" м" Foreground="#FF606060" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <DataGridRowsPresenter />
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>
                        </GroupStyle>
                    </DataGrid.GroupStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Index}" Width="50">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF757575" VerticalAlignment="Center" />
                                        <TextBlock Text="№" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Номер станции в пределах хода" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding PointCode}" Width="80">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF2196F3" VerticalAlignment="Center" />
                                        <TextBlock Text="Точка" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Код точки (для виртуальных станций - задняя точка, для обычных - передняя)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Station}" Width="1.5*" MinWidth="130">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE81E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF4CAF50" VerticalAlignment="Center" />
                                        <TextBlock Text="Станция" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Переход: задняя точка → передняя точка" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding StationLength_m, StringFormat=0.00}" Width="100">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF00BCD4" VerticalAlignment="Center" />
                                        <TextBlock Text="Длина ст., м" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Сумма визирных лучей: HDback + HDfore" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding DeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="95">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xEE4A;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF03A9F4" VerticalAlignment="Center" />
                                        <TextBlock Text="Δh, м" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Превышение: Rb - Rf (расчитанное значение)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Correction, StringFormat=+0.0000;-0.0000;0.0000}" Width="105">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FFFF9800" VerticalAlignment="Center" />
                                        <TextBlock Text="Поправка, м" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Поправка для распределения невязки" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding AdjustedDeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="1*" MinWidth="100">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF4CAF50" VerticalAlignment="Center" />
                                        <TextBlock Text="Δh испр., м" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Исправленное превышение (с учётом поправки)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding HeightZ0Display}" Width="1*" MinWidth="105">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF9E9E9E" VerticalAlignment="Center" />
                                        <TextBlock Text="Z0, м" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Высота точки без поправки за невязку (для виртуальных станций - задняя, для обычных - передняя)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding HeightDisplay}" Width="*" MinWidth="110">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF1976D2" VerticalAlignment="Center" />
                                        <TextBlock Text="Z, м" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Высота точки (для виртуальных станций - задняя, для обычных - передняя)" />
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
        </Border>
        </Grid>

        <!-- Popup для профиля хода -->
        <Popup x:Name="TraverseDetailsPopup"
               Placement="Center"
               AllowsTransparency="True"
               StaysOpen="True">
            <Border Background="White"
                    BorderBrush="#FF90CAF9"
                    BorderThickness="1"
                    Width="700"
                    Height="500">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Заголовок в стиле ribbon -->
                    <Border Grid.Row="0" Background="#FFE3F2FD" BorderBrush="#FF90CAF9" BorderThickness="0,0,0,1" Padding="12,8">
                        <Grid>
                            <TextBlock x:Name="ProfileTitleText"
                                       Text="Профиль хода"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                            <Button Content="&#xE10A;"
                                    FontFamily="Segoe MDL2 Assets"
                                    HorizontalAlignment="Right"
                                    Width="24"
                                    Height="24"
                                    FontSize="12"
                                    Click="CloseProfilePopup_Click"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#FF666666">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#FF1976D2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Canvas для рисования профиля -->
                    <Border Grid.Row="1" Padding="12" Background="#FFFAFAFA">
                        <Canvas x:Name="ProfileCanvas"
                                Background="White"
                                ClipToBounds="True"
                                SizeChanged="ProfileCanvas_SizeChanged"/>
                    </Border>

                    <!-- Панель настроек под профилем -->
                    <Border Grid.Row="2" Background="#FFF5F5F5" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0" Padding="12,8">
                        <StackPanel>
                            <TextBlock Text="Настройки отображения" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#FF666666"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Цвет линии -->
                                <TextBlock Grid.Column="0" Text="Цвет:" VerticalAlignment="Center" FontSize="11" Margin="0,0,8,0"/>
                                <ComboBox x:Name="ProfileColorComboBox" Grid.Column="1" SelectedIndex="0" Margin="0,0,12,0" FontSize="11"
                                          SelectionChanged="ProfileColorComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Синий" Tag="#FF1976D2"/>
                                    <ComboBoxItem Content="Зелёный" Tag="#FF4CAF50"/>
                                    <ComboBoxItem Content="Оранжевый" Tag="#FFFF9800"/>
                                    <ComboBoxItem Content="Красный" Tag="#FFF44336"/>
                                </ComboBox>

                                <!-- Мин высота -->
                                <TextBlock Grid.Column="2" Text="Мин:" VerticalAlignment="Center" FontSize="11" Margin="0,0,4,0"/>
                                <TextBox x:Name="MinHeightTextBox" Grid.Column="3" Width="60" Margin="0,0,12,0" FontSize="11"
                                         TextChanged="HeightLimitTextBox_TextChanged" VerticalContentAlignment="Center"/>

                                <!-- Макс высота -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal">
                                    <TextBlock Text="Макс:" VerticalAlignment="Center" FontSize="11" Margin="0,0,4,0"/>
                                    <TextBox x:Name="MaxHeightTextBox" Width="60" FontSize="11"
                                             TextChanged="HeightLimitTextBox_TextChanged" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
