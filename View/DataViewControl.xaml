<UserControl x:Class="Nivtropy.Views.DataViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <CollectionViewSource x:Key="RecordsGrouped" Source="{Binding Records}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="LineSummary.Index" />
                <scm:SortDescription PropertyName="ShotIndexWithinLine" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GroupKey" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8,8,8,4">
            <TextBlock Text="Данные из файла" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Text=" • " Margin="12,0" Foreground="#FF606060" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding FileName, TargetNullValue=«Файл не выбран»}" VerticalAlignment="Center"/>
            <TextBlock Text=" • " Margin="12,0" Foreground="#FF606060" VerticalAlignment="Center"/>
            <TextBlock Text="Ходов:" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Runs.Count}" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text=" • " Margin="12,0" Foreground="#FF606060" VerticalAlignment="Center"/>
            <TextBlock Text="Отсчётов:" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Records.Count}" Margin="4,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="2" Margin="8" BorderBrush="#FFB0B0B0" BorderThickness="1">
            <DataGrid x:Name="RecordsGrid"
                      ItemsSource="{Binding Source={StaticResource RecordsGrouped}}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="0"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      AlternationCount="2"
                      EnableRowVirtualization="True"
                      SelectionUnit="FullRow">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Margin" Value="0,0,0,0" />
                        <Setter Property="Background" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Margin" Value="0,4,0,0" />
                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#E3F2FD" BorderBrush="#90CAF9" BorderThickness="1" Padding="8" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Items[0].LineSummary.DisplayName}" FontWeight="SemiBold" />
                                        <TextBlock Text=" • " Margin="12,0,0,0" Foreground="#FF606060" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.RangeDisplay}" />
                                        <TextBlock Text=" • Отсчётов: " Margin="12,0,0,0" Foreground="#FF606060" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.RecordCount}" FontWeight="SemiBold" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <DataGridRowsPresenter />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </DataGrid.GroupStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding SeqDisplay}" Width="60"/>
                    <DataGridTextColumn Header="Ход" Binding="{Binding LineSummary.DisplayName}" Width="80"/>
                    <DataGridTextColumn Header="Порядок" Binding="{Binding ShotIndexWithinLine}" Width="70"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding ShotType}" Width="80"/>
                    <DataGridTextColumn Header="Mode" Binding="{Binding Mode}" Width="90"/>
                    <DataGridTextColumn Header="Точка" Binding="{Binding PointLabel}" Width="150"/>
                    <DataGridTextColumn Header="Station" Binding="{Binding StationCode}" Width="110"/>
                    <DataGridTextColumn Header="Rb, м" Binding="{Binding Rb_m, StringFormat=F4}" Width="90"/>
                    <DataGridTextColumn Header="Rf, м" Binding="{Binding Rf_m, StringFormat=F4}" Width="90"/>
                    <DataGridTextColumn Header="HD, м" Binding="{Binding HD_m, StringFormat=F2}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
