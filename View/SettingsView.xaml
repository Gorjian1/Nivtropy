<UserControl x:Class="Nivtropy.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Настройки"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,20" />

            <!-- Общие настройки -->
            <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Общие"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12" />
                    <TextBlock Text="Пока нет настроек в этом разделе"
                               Foreground="#FF808080"
                               FontStyle="Italic" />
                </StackPanel>
            </Border>

            <!-- Настройки расчётов -->
            <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Расчёты"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12" />

                    <!-- Контроль длин визирных лучей -->
                    <GroupBox Header="Контроль длин визирных лучей" Margin="0,0,0,16">
                        <StackPanel Margin="8">
                            <CheckBox Content="Проверять минимальную длину визирного луча"
                                      IsChecked="{Binding CheckMinimumRayLength, Mode=TwoWay}"
                                      Margin="0,0,0,8" />
                            <StackPanel Orientation="Horizontal" Margin="20,0,0,8"
                                        IsEnabled="{Binding CheckMinimumRayLength}">
                                <TextBlock Text="Минимальная длина луча:"
                                           VerticalAlignment="Center"
                                           Width="180" />
                                <TextBox Width="80"
                                         Text="{Binding MinimumRayLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Обычно ≥ 5 метров" />
                                <TextBlock Text="м" Margin="4,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>

                            <CheckBox Content="Проверять максимальную длину визирного луча"
                                      IsChecked="{Binding CheckMaximumRayLength, Mode=TwoWay}"
                                      Margin="0,8,0,8" />
                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0"
                                        IsEnabled="{Binding CheckMaximumRayLength}">
                                <TextBlock Text="Максимальная длина луча:"
                                           VerticalAlignment="Center"
                                           Width="180" />
                                <TextBox Width="80"
                                         Text="{Binding MaximumRayLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="I-II класс: 100м, III-IV класс: 150м" />
                                <TextBlock Text="м" Margin="4,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Контроль длины станции -->
                    <GroupBox Header="Контроль длины станции" Margin="0,0,0,16">
                        <StackPanel Margin="8">
                            <CheckBox Content="Проверять минимальную длину станции"
                                      IsChecked="{Binding CheckMinimumStationLength, Mode=TwoWay}"
                                      Margin="0,0,0,8" />
                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0"
                                        IsEnabled="{Binding CheckMinimumStationLength}">
                                <TextBlock Text="Минимальная длина станции:"
                                           VerticalAlignment="Center"
                                           Width="180" />
                                <TextBox Width="80"
                                         Text="{Binding MinimumStationLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Сумма визирных лучей, обычно ≥ 10м" />
                                <TextBlock Text="м" Margin="4,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Форматирование чисел -->
                    <GroupBox Header="Отображение" Margin="0,0,0,16">
                        <StackPanel Margin="8">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Количество знаков после запятой для высот:"
                                           VerticalAlignment="Center"
                                           Width="280" />
                                <ComboBox Width="80"
                                          SelectedIndex="{Binding HeightDecimalPlaces, Mode=TwoWay}">
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="4" />
                                    <ComboBoxItem Content="5" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Количество знаков после запятой для превышений:"
                                           VerticalAlignment="Center"
                                           Width="280" />
                                <ComboBox Width="80"
                                          SelectedIndex="{Binding DeltaHDecimalPlaces, Mode=TwoWay}">
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="4" />
                                    <ComboBoxItem Content="5" />
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Border>

            <!-- Настройки проектирования -->
            <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,0" Padding="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Проектирование"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12" />
                    <TextBlock Text="Пока нет настроек в этом разделе"
                               Foreground="#FF808080"
                               FontStyle="Italic" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
