<Window x:Class="Nivtropy.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="О программе Nivtropy"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Содержимое с прокруткой -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="20">
            <FlowDocumentScrollViewer x:Name="DocumentViewer"
                                      VerticalScrollBarVisibility="Disabled"
                                      HorizontalScrollBarVisibility="Disabled"
                                      IsToolBarVisible="False"
                                      Focusable="False">
                <FlowDocument x:Name="AboutDocument"
                              FontFamily="Segoe UI"
                              FontSize="13"
                              TextAlignment="Left"
                              PagePadding="20"
                              LineHeight="22">
                    <!-- Контент будет загружен из кода -->
                </FlowDocument>
            </FlowDocumentScrollViewer>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Border Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0" Background="#FFF9F9F9">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,10">
                <Button Content="Закрыть"
                        Width="100"
                        Height="32"
                        Click="CloseButton_Click"
                        IsDefault="True"
                        IsCancel="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF0078D4" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                Padding="16,6">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF106EBE" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF005A9E" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
