<UserControl x:Class="Nivtropy.Views.TraverseJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Nivtropy.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="RootControl">
    <UserControl.Resources>
        <converters:MethodDeltaConverter x:Key="MethodDeltaConverter" />
        <converters:GroupClosureConverter x:Key="GroupClosureConverter" />
        <converters:ArmDifferenceExceededToBrushConverter x:Key="ArmDifferenceExceededToBrushConverter" />
        <converters:GridLineColorConverter x:Key="GridLineColorConverter" />
        <converters:JournalStationCountConverter x:Key="JournalStationCountConverter" />
        <converters:StringPresenceToVisibilityConverter x:Key="StringPresenceToVisibilityConverter" />
        <converters:DualValueSeparatorVisibilityConverter x:Key="DualValueSeparatorVisibilityConverter" />
        <CollectionViewSource x:Key="StationsGrouped" Source="{Binding Calculation.Rows}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LineName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="8,8,8,4"
                    Orientation="Horizontal">
            <TextBlock Text="Журнал нивелирного хода"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Margin="24,0,0,0">
                <TextBlock Text="Метод:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Calculation.SelectedMethod.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                <TextBlock Text="Класс:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Calculation.SelectedClass.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <!-- Панель статистики с иконками -->
        <StackPanel Grid.Row="1" Margin="8,4,8,4" Orientation="Horizontal">
            <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#0078D4" />
            <TextBlock Text="Станций:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.StationsCount}" Margin="4,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#D83B01" />
            <TextBlock Text="ΣΔh:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.Closure, StringFormat=+0.0000;-0.0000;0.0000}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Calculation.IsClosureWithinTolerance}" Value="True">
                                <Setter Property="Foreground" Value="#107C10" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Calculation.IsClosureWithinTolerance}" Value="False">
                                <Setter Property="Foreground" Value="#FFF44336" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#8764B8" />
            <TextBlock Text="Допуск:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.AllowableClosure, StringFormat=±0.0000}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#00B7C3" />
            <TextBlock Text="Длина:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.TotalAverageLength, StringFormat=0.00}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#707070" />
        </StackPanel>

        <Border Grid.Row="2" Margin="8" BorderBrush="#FFB0B0B0" BorderThickness="1">
            <DataGrid ItemsSource="{Binding Source={StaticResource StationsGrouped}}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="0"
                      RowHeaderWidth="0"
                      EnableRowVirtualization="True"
                      SelectionUnit="FullRow"
                      FontFamily="{Binding Settings.TableFontFamily}"
                      FontSize="{Binding Settings.TableFontSize}"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}"
                      HorizontalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="AlternatingRowBackground" Value="Transparent" />
                        <Setter Property="Background" Value="White" />
                    </Style>
                </DataGrid.Style>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Setter Property="Padding" Value="4,8,4,8" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="Foreground" Value="#202020" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8,10,8,10" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                        <Setter Property="BorderBrush" Value="#E1E1E1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="MinHeight" Value="32" />
                        <Setter Property="Background" Value="White" />
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Margin" Value="0,4,0,0" />
                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#F5F8FA" BorderBrush="#D0D8E0" BorderThickness="1" Padding="8" CornerRadius="3">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button x:Name="TraverseInfoButton"
                                                Width="24" Height="24"
                                                Margin="0,0,8,0"
                                                Padding="0"
                                                Background="#0078D4"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Показать детали хода"
                                                Tag="{Binding Name}"
                                                Click="ShowTraverseDetails_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="12"
                                                            Width="24"
                                                            Height="24">
                                                        <TextBlock Text="&#xE783;"
                                                                   FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="14"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#005A9E" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <Button x:Name="SharedPointsButton"
                                                Width="24" Height="24"
                                                Margin="0,0,8,0"
                                                Padding="0"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Tag="{Binding Items[0].LineSummary}"
                                                Click="ShowSharedPoints_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Setter Property="Background" Value="#8A8A8A" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Items[0].LineSummary.HasSharedPoints}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.8" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="12"
                                                            Width="24"
                                                            Height="24">
                                                        <TextBlock Text="&#xE8CB;"
                                                                   FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="14"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#202020" />
                                        <TextBlock Text=" • Станций: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding ItemCount, Converter={StaticResource JournalStationCountConverter}}" FontWeight="SemiBold" Foreground="#202020" />
                                        <TextBlock Text=" • ΣΔh: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Converter={StaticResource GroupClosureConverter}}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />
                                        <TextBlock Text=" • Длина: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.TotalAverageLength, StringFormat=0.00}" FontWeight="Bold" Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />
                                        <TextBlock Text=" • Σ|разность плеч|: " Foreground="#707070" Margin="12,0,0,0" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.ArmDifferenceAccumulation, StringFormat=0.0000}"
                                                   FontWeight="Bold">
                                            <TextBlock.Foreground>
                                                <Binding Path="Items[0].LineSummary.IsArmDifferenceAccumulationExceeded"
                                                         Converter="{StaticResource ArmDifferenceExceededToBrushConverter}" />
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock Text=" м" Foreground="#707070" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <DataGridRowsPresenter />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </DataGrid.GroupStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Index}" Width="50">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#707070" VerticalAlignment="Center" />
                                    <TextBlock Text="№" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Width="1.2*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#0078D4" VerticalAlignment="Center" />
                                    <TextBlock Text="Точка" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding BackCode}"
                                               Grid.Row="0"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding BackCode, Converter={StaticResource StringPresenceToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForeCode}" Value="">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ForeCode}" Value="{x:Null}">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Border Grid.Row="1"
                                            Height="1"
                                            Background="#E0E0E0"
                                            Margin="8,2"
                                            VerticalAlignment="Top">
                                        <Border.Visibility>
                                            <MultiBinding Converter="{StaticResource DualValueSeparatorVisibilityConverter}">
                                                <Binding Path="BackCode" />
                                                <Binding Path="ForeCode" />
                                            </MultiBinding>
                                        </Border.Visibility>
                                    </Border>

                                    <TextBlock Text="{Binding ForeCode}"
                                               Grid.Row="1"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Visibility="{Binding ForeCode, Converter={StaticResource StringPresenceToVisibilityConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Binding="{Binding StationLength_m, StringFormat=0.00}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#00B7C3" VerticalAlignment="Center" />
                                    <TextBlock Text="Длина ст., м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding DeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xEE4A;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#0099BC" VerticalAlignment="Center" />
                                    <TextBlock Text="Δh, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding CorrectionDisplay}" Width="*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#D83B01" VerticalAlignment="Center" />
                                    <TextBlock Text="Поправка, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding AdjustedDeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#107C10" VerticalAlignment="Center" />
                                    <TextBlock Text="Δh испр., м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Width="1.1*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF9E9E9E" VerticalAlignment="Center" />
                                    <TextBlock Text="Z0, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding BackHeightZ0, StringFormat=0.0000}"
                                               Grid.Row="0"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding BackHeightZ0, Converter={StaticResource StringPresenceToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForeHeightZ0}" Value="">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ForeHeightZ0}" Value="{x:Null}">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Border Grid.Row="1"
                                            Height="1"
                                            Background="#E0E0E0"
                                            Margin="8,2"
                                            VerticalAlignment="Top">
                                        <Border.Visibility>
                                            <MultiBinding Converter="{StaticResource DualValueSeparatorVisibilityConverter}">
                                                <Binding Path="BackHeightZ0" />
                                                <Binding Path="ForeHeightZ0" />
                                            </MultiBinding>
                                        </Border.Visibility>
                                    </Border>

                                    <TextBlock Text="{Binding ForeHeightZ0, StringFormat=0.0000}"
                                               Grid.Row="1"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Visibility="{Binding ForeHeightZ0, Converter={StaticResource StringPresenceToVisibilityConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="1.1*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE707;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#005A9E" VerticalAlignment="Center" />
                                    <TextBlock Text="Z, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding BackHeight, StringFormat=0.0000}"
                                               Grid.Row="0"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding BackHeight, Converter={StaticResource StringPresenceToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForeHeight}" Value="">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ForeHeight}" Value="{x:Null}">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Border Grid.Row="1"
                                            Height="1"
                                            Background="#E0E0E0"
                                            Margin="8,2"
                                            VerticalAlignment="Top">
                                        <Border.Visibility>
                                            <MultiBinding Converter="{StaticResource DualValueSeparatorVisibilityConverter}">
                                                <Binding Path="BackHeight" />
                                                <Binding Path="ForeHeight" />
                                            </MultiBinding>
                                        </Border.Visibility>
                                    </Border>

                                    <TextBlock Text="{Binding ForeHeight, StringFormat=0.0000}"
                                               Grid.Row="1"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Visibility="{Binding ForeHeight, Converter={StaticResource StringPresenceToVisibilityConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Popup x:Name="SharedPointsPopup"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="White"
                    BorderBrush="#FFB0B0B0"
                    BorderThickness="1"
                    CornerRadius="3"
                    MinWidth="280">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="2" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Общие точки"
                               FontWeight="SemiBold"
                               Padding="8,6,8,4" />
                    <Separator />
                    <ScrollViewer MaxHeight="240" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="SharedPointsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="8,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                      Content="{Binding Code}"
                                                      VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding RunsDisplay}"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="#707070" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <TextBlock x:Name="SharedPointsEmptyText"
                               Text="Нет общих точек"
                               Padding="12"
                               HorizontalAlignment="Center"
                               Foreground="#707070"
                               Visibility="Collapsed" />
                </StackPanel>
            </Border>
        </Popup>

        <!-- Popup для профиля хода -->
        <Popup x:Name="TraverseDetailsPopup"
               Placement="Center"
               AllowsTransparency="True"
               StaysOpen="True">
            <Border Background="White"
                    BorderBrush="#FF90CAF9"
                    BorderThickness="1"
                    Width="700"
                    Height="500">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Заголовок в стиле ribbon -->
                    <Border Grid.Row="0" Background="#FFE3F2FD" BorderBrush="#FF90CAF9" BorderThickness="0,0,0,1" Padding="12,8">
                        <Grid>
                            <TextBlock x:Name="ProfileTitleText"
                                       Text="Профиль хода"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                            <Button Content="&#xE10A;"
                                    FontFamily="Segoe MDL2 Assets"
                                    HorizontalAlignment="Right"
                                    Width="24"
                                    Height="24"
                                    FontSize="12"
                                    Click="CloseProfilePopup_Click"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#707070">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#005A9E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Canvas для рисования профиля -->
                    <Border Grid.Row="1" Padding="12" Background="#FFFAFAFA">
                        <Canvas x:Name="ProfileCanvas"
                                Background="White"
                                ClipToBounds="True"
                                SizeChanged="ProfileCanvas_SizeChanged"/>
                    </Border>

                    <!-- Панель настроек под профилем -->
                    <Border Grid.Row="2" Background="#FFF5F5F5" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0" Padding="12,8">
                        <StackPanel>
                            <TextBlock Text="Настройки отображения" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#707070"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Цвет линии -->
                                <TextBlock Grid.Column="0" Text="Цвет:" VerticalAlignment="Center" FontSize="11" Margin="0,0,8,0"/>
                                <ComboBox x:Name="ProfileColorComboBox" Grid.Column="1" SelectedIndex="0" Margin="0,0,12,0" FontSize="11"
                                          SelectionChanged="ProfileColorComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Синий" Tag="#005A9E"/>
                                    <ComboBoxItem Content="Зелёный" Tag="#107C10"/>
                                    <ComboBoxItem Content="Оранжевый" Tag="#D83B01"/>
                                    <ComboBoxItem Content="Красный" Tag="#FFF44336"/>
                                </ComboBox>

                                <!-- Мин высота -->
                                <TextBlock Grid.Column="2" Text="Мин:" VerticalAlignment="Center" FontSize="11" Margin="0,0,4,0"/>
                                <TextBox x:Name="MinHeightTextBox" Grid.Column="3" Width="60" Margin="0,0,12,0" FontSize="11"
                                         TextChanged="HeightLimitTextBox_TextChanged" VerticalContentAlignment="Center"/>

                                <!-- Макс высота -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal">
                                    <TextBlock Text="Макс:" VerticalAlignment="Center" FontSize="11" Margin="0,0,4,0"/>
                                    <TextBox x:Name="MaxHeightTextBox" Width="60" FontSize="11"
                                             TextChanged="HeightLimitTextBox_TextChanged" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
