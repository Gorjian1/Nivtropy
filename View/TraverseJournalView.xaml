<UserControl x:Class="Nivtropy.Views.TraverseJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Nivtropy.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="RootControl">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:MethodDeltaConverter x:Key="MethodDeltaConverter" />
        <converters:GroupClosureConverter x:Key="GroupClosureConverter" />
        <converters:ArmDifferenceExceededToBrushConverter x:Key="ArmDifferenceExceededToBrushConverter" />
        <converters:GridLineColorConverter x:Key="GridLineColorConverter" />
        <converters:JournalStationCountConverter x:Key="JournalStationCountConverter" />
        <converters:StringPresenceToVisibilityConverter x:Key="StringPresenceToVisibilityConverter" />
        <converters:DualValueSeparatorVisibilityConverter x:Key="DualValueSeparatorVisibilityConverter" />
        <CollectionViewSource x:Key="StationsGrouped" Source="{Binding Calculation.Rows}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LineName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <!-- Главный Grid с двумя колонками: таблица слева, настройки справа -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" MinWidth="400" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" MinWidth="280" />
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ПАНЕЛЬ: Таблица журнала -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Заголовок таблицы -->
            <TextBlock Grid.Row="0"
                       Text="Журнал нивелирного хода"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="8,8,8,8"
                       VerticalAlignment="Center" />

            <!-- Таблица журнала -->
            <Border Grid.Row="1" Margin="8" BorderBrush="#FFB0B0B0" BorderThickness="1">
            <DataGrid ItemsSource="{Binding Source={StaticResource StationsGrouped}}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="0"
                      RowHeaderWidth="0"
                      EnableRowVirtualization="True"
                      SelectionUnit="FullRow"
                      FontFamily="{Binding Settings.TableFontFamily}"
                      FontSize="{Binding Settings.TableFontSize}"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}"
                      HorizontalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="AlternatingRowBackground" Value="Transparent" />
                        <Setter Property="Background" Value="White" />
                    </Style>
                </DataGrid.Style>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Setter Property="Padding" Value="4,8,4,8" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="Foreground" Value="#202020" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8,10,8,10" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                        <Setter Property="BorderBrush" Value="#E1E1E1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="MinHeight" Value="32" />
                        <Setter Property="Background" Value="White" />
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Margin" Value="0,4,0,0" />
                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#F5F8FA" BorderBrush="#D0D8E0" BorderThickness="1" Padding="8" CornerRadius="3">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button x:Name="TraverseInfoButton"
                                                Width="24" Height="24"
                                                Margin="0,0,8,0"
                                                Padding="0"
                                                Background="#0078D4"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Показать детали хода"
                                                Tag="{Binding Name}"
                                                Click="ShowTraverseDetails_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="12"
                                                            Width="24"
                                                            Height="24">
                                                        <TextBlock Text="&#xE783;"
                                                                   FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="14"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#005A9E" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <!-- Checkbox активности хода -->
                                        <CheckBox IsChecked="{Binding Items[0].LineSummary.IsActive, Mode=TwoWay}"
                                                  ToolTip="Активен (участвует в расчётах и экспорте)"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Setter Property="Foreground" Value="#202020" />
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>

                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#202020" />
                                        <TextBlock Text=" • Станций: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding ItemCount, Converter={StaticResource JournalStationCountConverter}}" FontWeight="SemiBold" Foreground="#202020" />
                                        <TextBlock Text=" • ΣΔh: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Converter={StaticResource GroupClosureConverter}}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />
                                        <TextBlock Text=" • Длина: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.TotalAverageLength, StringFormat=0.00}" FontWeight="Bold" Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />
                                        <TextBlock Text=" • Σ|разность плеч|: " Foreground="#707070" Margin="12,0,0,0" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.ArmDifferenceAccumulation, StringFormat=0.0000}"
                                                   FontWeight="Bold">
                                            <TextBlock.Foreground>
                                                <Binding Path="Items[0].LineSummary.IsArmDifferenceAccumulationExceeded"
                                                         Converter="{StaticResource ArmDifferenceExceededToBrushConverter}" />
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock Text=" м" Foreground="#707070" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <DataGridRowsPresenter />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </DataGrid.GroupStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Index}" Width="50">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#707070" VerticalAlignment="Center" />
                                    <TextBlock Text="№" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Width="1.2*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#0078D4" VerticalAlignment="Center" />
                                    <TextBlock Text="Точка" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding BackCode}"
                                               Grid.Row="0"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding BackCode, Converter={StaticResource StringPresenceToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForeCode}" Value="">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ForeCode}" Value="{x:Null}">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Border Grid.Row="1"
                                            Height="1"
                                            Background="#E0E0E0"
                                            Margin="8,2"
                                            VerticalAlignment="Top">
                                        <Border.Visibility>
                                            <MultiBinding Converter="{StaticResource DualValueSeparatorVisibilityConverter}">
                                                <Binding Path="BackCode" />
                                                <Binding Path="ForeCode" />
                                            </MultiBinding>
                                        </Border.Visibility>
                                    </Border>

                                    <TextBlock Text="{Binding ForeCode}"
                                               Grid.Row="1"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Visibility="{Binding ForeCode, Converter={StaticResource StringPresenceToVisibilityConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Binding="{Binding StationLength_m, StringFormat=0.00}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#00B7C3" VerticalAlignment="Center" />
                                    <TextBlock Text="Длина ст., м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding DeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xEE4A;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#0099BC" VerticalAlignment="Center" />
                                    <TextBlock Text="Δh, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding CorrectionDisplay}" Width="*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#D83B01" VerticalAlignment="Center" />
                                    <TextBlock Text="Поправка, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding AdjustedDeltaH, StringFormat=+0.0000;-0.0000;0.0000}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#107C10" VerticalAlignment="Center" />
                                    <TextBlock Text="Δh испр., м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Width="1.1*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF9E9E9E" VerticalAlignment="Center" />
                                    <TextBlock Text="Z0, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding BackHeightZ0, StringFormat=0.0000}"
                                               Grid.Row="0"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding BackHeightZ0, Converter={StaticResource StringPresenceToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForeHeightZ0}" Value="">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ForeHeightZ0}" Value="{x:Null}">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Border Grid.Row="1"
                                            Height="1"
                                            Background="#E0E0E0"
                                            Margin="8,2"
                                            VerticalAlignment="Top">
                                        <Border.Visibility>
                                            <MultiBinding Converter="{StaticResource DualValueSeparatorVisibilityConverter}">
                                                <Binding Path="BackHeightZ0" />
                                                <Binding Path="ForeHeightZ0" />
                                            </MultiBinding>
                                        </Border.Visibility>
                                    </Border>

                                    <TextBlock Text="{Binding ForeHeightZ0, StringFormat=0.0000}"
                                               Grid.Row="1"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Visibility="{Binding ForeHeightZ0, Converter={StaticResource StringPresenceToVisibilityConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="1.1*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE707;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#005A9E" VerticalAlignment="Center" />
                                    <TextBlock Text="Z, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding BackHeight, StringFormat=0.0000}"
                                               Grid.Row="0"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding BackHeight, Converter={StaticResource StringPresenceToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForeHeight}" Value="">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ForeHeight}" Value="{x:Null}">
                                                        <Setter Property="Grid.RowSpan" Value="2" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Border Grid.Row="1"
                                            Height="1"
                                            Background="#E0E0E0"
                                            Margin="8,2"
                                            VerticalAlignment="Top">
                                        <Border.Visibility>
                                            <MultiBinding Converter="{StaticResource DualValueSeparatorVisibilityConverter}">
                                                <Binding Path="BackHeight" />
                                                <Binding Path="ForeHeight" />
                                            </MultiBinding>
                                        </Border.Visibility>
                                    </Border>

                                    <TextBlock Text="{Binding ForeHeight, StringFormat=0.0000}"
                                               Grid.Row="1"
                                               HorizontalAlignment="Stretch"
                                               TextAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               Visibility="{Binding ForeHeight, Converter={StaticResource StringPresenceToVisibilityConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        </Grid>
        <!-- Конец левой панели -->

        <!-- GridSplitter для изменения размера панелей -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#FFE0E0E0"
                      ShowsPreview="False" />

        <!-- ПРАВАЯ ПАНЕЛЬ: Настройки и информация -->
        <ScrollViewer Grid.Column="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="8">
            <ScrollViewer.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFF5F7F9" Offset="0"/>
                    <GradientStop Color="#FFEAEFF4" Offset="1"/>
                </LinearGradientBrush>
            </ScrollViewer.Background>
            <StackPanel>

                <!-- СТРОКА 1: Метод | Класс | Экспорт (в один ряд) -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Метод -->
                    <Border Grid.Column="0"
                            BorderBrush="#FFBCC7D3"
                            BorderThickness="1"
                            CornerRadius="2"
                            Padding="8"
                            Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1" Direction="270" Opacity="0.25"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="метод"
                                       FontSize="9"
                                       Foreground="#2B579A"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4" />
                            <ComboBox ItemsSource="{Binding Calculation.Methods}"
                                      SelectedItem="{Binding Calculation.SelectedMethod, Mode=TwoWay}"
                                      DisplayMemberPath="Display"
                                      FontSize="11"
                                      Height="24">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                                    <GradientStop Color="#FFF5F7F9" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Класс -->
                    <Border Grid.Column="2"
                            BorderBrush="#FFBCC7D3"
                            BorderThickness="1"
                            CornerRadius="2"
                            Padding="8"
                            Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1" Direction="270" Opacity="0.25"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="класс"
                                       FontSize="9"
                                       Foreground="#2B579A"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4" />
                            <ComboBox ItemsSource="{Binding Calculation.Classes}"
                                      SelectedItem="{Binding Calculation.SelectedClass, Mode=TwoWay}"
                                      DisplayMemberPath="Display"
                                      ToolTip="Выбор допуска по классу"
                                      FontSize="11"
                                      Height="24">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                                    <GradientStop Color="#FFF5F7F9" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка экспорта (маленькая квадратная) -->
                    <Button Grid.Column="4"
                            Command="{Binding Calculation.ExportCommand}"
                            Width="50"
                            Height="50"
                            Padding="0"
                            BorderBrush="#FF4F9F4F"
                            BorderThickness="1"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Cursor="Hand"
                            ToolTip="Экспорт в Excel">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF6FBD6F" Offset="0"/>
                                            <GradientStop Color="#FF5AAF5A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#40000000" BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FF7FCD7F" Offset="0"/>
                                                    <GradientStop Color="#FF6ABF6A" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <TextBlock Text="&#xE8B7;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Foreground="White" />
                        </Button.Content>
                    </Button>
                </Grid>

                <!-- СТРОКА 2: Блок реперов с кнопкой-списком -->
                <Border BorderBrush="#FFBCC7D3"
                        BorderThickness="1"
                        CornerRadius="2"
                        Padding="12"
                        Margin="0,0,0,8"
                        Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Заголовок -->
                        <TextBlock Text="Реперы"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="#2B579A"
                                   Margin="0,0,0,10" />

                        <!-- Одна строка: Система + Точки + Высота + кнопки -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="95" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="75" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Метка "Система:" -->
                            <TextBlock Grid.Column="0"
                                       Text="Система:"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0" />

                            <!-- ComboBox системы -->
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Calculation.Systems}"
                                      SelectedItem="{Binding Calculation.SelectedSystem, Mode=TwoWay}"
                                      DisplayMemberPath="DisplayName"
                                      ToolTip="Выберите систему ходов для установки реперов"
                                      FontSize="10"
                                      Height="24"
                                      Background="White"
                                      BorderBrush="#FFACACAC" />

                            <!-- Метка "Точки:" -->
                            <TextBlock Grid.Column="3"
                                       Text="Точки:"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0" />

                            <!-- Комбобокс с точками -->
                            <ComboBox Grid.Column="4"
                                      ItemsSource="{Binding Calculation.AvailablePoints}"
                                      SelectedItem="{Binding Calculation.SelectedPoint, Mode=TwoWay}"
                                      DisplayMemberPath="DisplayName"
                                      ToolTip="Выберите точку для установки известной высоты"
                                      FontSize="10"
                                      Height="24"
                                      Background="White"
                                      BorderBrush="#FFACACAC"
                                      VerticalContentAlignment="Center" />

                            <!-- Метка "Высота:" -->
                            <TextBlock Grid.Column="6"
                                       Text="Высота:"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0" />

                            <!-- Поле ввода высоты -->
                            <TextBox x:Name="BenchmarkHeightTextBox"
                                     Grid.Column="7"
                                     Text="{Binding Calculation.NewBenchmarkHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Введите известную высоту репера (Enter для добавления)"
                                     KeyDown="BenchmarkHeightTextBox_KeyDown"
                                     VerticalContentAlignment="Center"
                                     FontSize="10"
                                     Padding="4,2"
                                     Height="24"
                                     Background="White"
                                     BorderBrush="#FFACACAC" />

                            <!-- Кнопка + -->
                            <Button Grid.Column="9"
                                    Content="+"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Width="26"
                                    Height="26"
                                    Command="{Binding Calculation.AddBenchmarkCommand}"
                                    ToolTip="Добавить репер"
                                    Padding="0"
                                    Foreground="White"
                                    BorderThickness="1"
                                    BorderBrush="#FF5A9F5A"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FF6FBD6F" Offset="0"/>
                                                    <GradientStop Color="#FF4CAF50" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#FF7FCD7F" Offset="0"/>
                                                            <GradientStop Color="#FF5ABF5A" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Кнопка ▼ для показа/скрытия списка -->
                            <ToggleButton x:Name="ToggleBenchmarksButton"
                                          Grid.Column="11"
                                          Width="26"
                                          Height="26"
                                          Padding="0"
                                          BorderBrush="#FFACACAC"
                                          BorderThickness="1"
                                          Cursor="Hand"
                                          ToolTip="Показать/скрыть список реперов">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                                    <GradientStop Color="#FFF0F0F0" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#FFFEFEFE" Offset="0"/>
                                                            <GradientStop Color="#FFE5F1FB" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#FFD0E5F5" Offset="0"/>
                                                            <GradientStop Color="#FFBAD6F0" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                                <TextBlock Text="▼"
                                           FontSize="9"
                                           Foreground="#505050"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </ToggleButton>
                        </Grid>

                        <!-- Список реперов (сворачиваемый) -->
                        <Border BorderBrush="#FFF0F0F0"
                                BorderThickness="1"
                                CornerRadius="3"
                                Background="#FFFAFAFA"
                                MaxHeight="150"
                                Visibility="{Binding ElementName=ToggleBenchmarksButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding Calculation.Benchmarks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#FFE0E0E0"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="6,4"
                                                    Background="White"
                                                    Margin="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0"
                                                                Orientation="Horizontal"
                                                                VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Code}"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="11"
                                                                   Margin="0,0,6,0" />
                                                        <TextBlock FontSize="10"
                                                                   Foreground="#707070"
                                                                   VerticalAlignment="Center">
                                                            <Run Text="{Binding Height, Mode=OneWay, StringFormat=F4}" />
                                                            <Run Text=" м" />
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <Button Grid.Column="1"
                                                            Content="×"
                                                            FontSize="14"
                                                            Width="20"
                                                            Height="20"
                                                            Padding="0"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Foreground="#FFF44336"
                                                            Cursor="Hand"
                                                            ToolTip="Удалить репер"
                                                            Click="RemoveBenchmark_Click"
                                                            Tag="{Binding}"
                                                            VerticalAlignment="Center" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- СТРОКА 3: Статистика (перенесено из панели над таблицей) -->
                <Border BorderBrush="#FFBCC7D3"
                        BorderThickness="1"
                        CornerRadius="2"
                        Padding="12"
                        Margin="0,0,0,8"
                        Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Статистика"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="#2B579A"
                                   Margin="0,0,0,10" />

                        <!-- Вся статистика в одну строку -->
                        <WrapPanel Orientation="Horizontal">
                            <!-- Станций -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="11" Foreground="#0078D4" VerticalAlignment="Center" />
                                <TextBlock Text=" Станций:" FontSize="10" Foreground="#707070" Margin="3,0,3,0" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Calculation.StationsCount}" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- ΣΔh -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="11" Foreground="#D83B01" VerticalAlignment="Center" />
                                <TextBlock Text=" ΣΔh:" FontSize="10" Foreground="#707070" Margin="3,0,3,0" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Calculation.Closure, StringFormat=+0.0000;-0.0000;0.0000}" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Calculation.IsClosureWithinTolerance}" Value="True">
                                                    <Setter Property="Foreground" Value="#107C10" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Calculation.IsClosureWithinTolerance}" Value="False">
                                                    <Setter Property="Foreground" Value="#FFF44336" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text=" м" FontSize="10" Foreground="#707070" Margin="2,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Допуск -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="11" Foreground="#8764B8" VerticalAlignment="Center" />
                                <TextBlock Text=" Допуск:" FontSize="10" Foreground="#707070" Margin="3,0,3,0" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Calculation.AllowableClosure, StringFormat=±0.0000}" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Text=" м" FontSize="10" Foreground="#707070" Margin="2,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Длина -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="11" Foreground="#00B7C3" VerticalAlignment="Center" />
                                <TextBlock Text=" Длина:" FontSize="10" Foreground="#707070" Margin="3,0,3,0" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Calculation.TotalAverageLength, StringFormat=0.00}" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Text=" м" FontSize="10" Foreground="#707070" Margin="2,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- СТРОКА 4: Визуализация связей ходов (placeholder) -->
                <Border BorderBrush="#FFBCC7D3"
                        BorderThickness="1"
                        CornerRadius="2"
                        Padding="12"
                        Margin="0,0,0,8"
                        Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Заголовок с кнопкой управления -->
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="Связи ходов"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Foreground="#2B579A"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Canvas для визуализации -->
                        <Border BorderBrush="#FFE0E0E0"
                                BorderThickness="1"
                                CornerRadius="3"
                                Height="200"
                                Background="#FFFAFAFA">
                            <Canvas x:Name="TraverseVisualizationCanvas"
                                    ClipToBounds="True" />
                        </Border>

                        <Border BorderBrush="#FFE0E0E0"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="10"
                                Margin="0,10,0,0"
                                Background="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0"
                                           Grid.Row="0"
                                           Text="Управление ходами"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Foreground="#2B579A"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Column="2"
                                           Grid.Row="0"
                                           Text="Выберите систему, перемещайте ходы и управляйте общими точками между ходами."
                                           TextWrapping="Wrap"
                                           Foreground="#707070"
                                           FontSize="11"
                                           Margin="0,0,0,8" />

                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0"
                                            Background="#FFF8F9FA"
                                            BorderBrush="#FFE0E0E0"
                                            BorderThickness="0,0,0,1"
                                            Padding="8,6">
                                        <TextBlock Text="Системы ходов"
                                                   FontWeight="SemiBold"
                                                   FontSize="12"
                                                   Foreground="#2B579A" />
                                    </Border>

                                    <ListBox Grid.Row="1"
                                             x:Name="SystemsListBox"
                                             SelectionChanged="SystemsListBox_SelectionChanged"
                                             BorderThickness="0"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="4,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding DisplayName}"
                                                               FontSize="11"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding RunCount, StringFormat=({0})}"
                                                               FontSize="10"
                                                               Foreground="#707070"
                                                               Margin="4,0,0,0"
                                                               VerticalAlignment="Center" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <StackPanel Grid.Row="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="8">
                                        <Button Content="➕ Создать"
                                                Click="CreateSystem_Click"
                                                Padding="10,4"
                                                Margin="0,0,4,0"
                                                FontSize="10"
                                                Background="White"
                                                BorderBrush="#FFACACAC"
                                                BorderThickness="1"
                                                Cursor="Hand" />
                                        <Button Content="✏ Переименовать"
                                                Click="RenameSystem_Click"
                                                Padding="10,4"
                                                Margin="0,0,4,0"
                                                FontSize="10"
                                                Background="White"
                                                BorderBrush="#FFACACAC"
                                                BorderThickness="1"
                                                Cursor="Hand" />
                                        <Button Content="🗑 Удалить"
                                                Click="DeleteSystem_Click"
                                                Padding="10,4"
                                                FontSize="10"
                                                Background="White"
                                                BorderBrush="#FFACACAC"
                                                BorderThickness="1"
                                                Cursor="Hand" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Column="2" Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   x:Name="RunsHeaderText"
                                                   Text="Ходы системы"
                                                   FontWeight="SemiBold"
                                                   FontSize="12"
                                                   Foreground="#2B579A"
                                                   VerticalAlignment="Center" />
                                        <ComboBox Grid.Column="1"
                                                  x:Name="MoveToSystemComboBox"
                                                  DisplayMemberPath="Name"
                                                  FontSize="10"
                                                  MinWidth="120"
                                                  Height="24"
                                                  Background="White"
                                                  BorderBrush="#FFACACAC"
                                                  ToolTip="Переместить выбранные ходы в другую систему" />
                                    </Grid>

                                    <ListBox Grid.Row="1"
                                             x:Name="RunsListBox"
                                             SelectionMode="Extended"
                                             SelectionChanged="RunsListBox_SelectionChanged"
                                             BorderBrush="#FFE0E0E0"
                                             BorderThickness="1"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="4,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsActive}"
                                                              Margin="0,0,6,0"
                                                              VerticalAlignment="Center"
                                                              ToolTip="Активен" />

                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Header}"
                                                               FontSize="11"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding CombinedStats}"
                                                               FontSize="9"
                                                               Foreground="#707070"
                                                               Margin="4,0,0,0"
                                                               VerticalAlignment="Center" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <StackPanel Grid.Row="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,6,0,6">
                                        <Button Content="Переместить"
                                                Click="MoveRuns_Click"
                                                Padding="10,4"
                                                FontSize="10"
                                                Background="#0078D4"
                                                Foreground="White"
                                                BorderBrush="#FF005A9E"
                                                BorderThickness="1"
                                                Cursor="Hand" />
                                    </StackPanel>

                                    <Separator Grid.Row="3" Margin="0,4" />

                                    <Border Grid.Row="4"
                                            BorderBrush="#FFE0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8"
                                            Background="#FFFAFAFA">
                                        <StackPanel>
                                            <TextBlock Text="Общие точки выбранного хода"
                                                       FontWeight="SemiBold"
                                                       FontSize="11"
                                                       Margin="0,0,0,6"
                                                       x:Name="SharedPointsHeader" />
                                            <ItemsControl x:Name="SharedPointsList"
                                                          Margin="0,0,0,4">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="6,4">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <CheckBox Grid.Column="0"
                                                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                                          Content="{Binding Code}"
                                                                          VerticalAlignment="Center"
                                                                          ToolTip="Отметьте, если точка действительно общая между ходами" />
                                                                <TextBlock Grid.Column="1"
                                                                           Text="{Binding RunsDisplay}"
                                                                           Margin="8,0,0,0"
                                                                           VerticalAlignment="Center"
                                                                           Foreground="#707070" />
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <TextBlock x:Name="SharedPointsEmptyText"
                                                       Text="Выберите ход для просмотра одноимённых точек"
                                                       Padding="6"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#707070"
                                                       Visibility="Collapsed" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
        <!-- Конец правой панели -->

        <!-- Popup для профиля хода -->
        <Popup x:Name="TraverseDetailsPopup"
               Placement="Center"
               AllowsTransparency="True"
               StaysOpen="True">
            <Border Background="White"
                    BorderBrush="#FF90CAF9"
                    BorderThickness="1"
                    Width="1000"
                    Height="700">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Заголовок в стиле ribbon -->
                    <Border Grid.Row="0" Background="#FFE3F2FD" BorderBrush="#FF90CAF9" BorderThickness="0,0,0,1" Padding="12,8">
                        <Grid>
                            <TextBlock x:Name="ProfileTitleText"
                                       Text="Профиль хода"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                            <Button Content="&#xE10A;"
                                    FontFamily="Segoe MDL2 Assets"
                                    HorizontalAlignment="Right"
                                    Width="24"
                                    Height="24"
                                    FontSize="12"
                                    Click="CloseProfilePopup_Click"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#707070">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#005A9E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Canvas для рисования профиля -->
                    <Border Grid.Row="1" Padding="12" Background="#FFFAFAFA">
                        <Canvas x:Name="ProfileCanvas"
                                Background="White"
                                ClipToBounds="True"
                                SizeChanged="ProfileCanvas_SizeChanged"/>
                    </Border>

                    <!-- Панель настроек под профилем -->
                    <Border Grid.Row="2" Background="#FFFAFAFA" BorderBrush="#FFD0D0D0" BorderThickness="0,1,0,0" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Группа: Отображение графиков -->
                            <Border Grid.Column="0"
                                    Background="White"
                                    BorderBrush="#FFE0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12,10">
                                <StackPanel>
                                    <TextBlock Text="📈 Графики"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="#505050"
                                               Margin="0,0,0,8"/>

                                    <!-- Z график -->
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="ShowZCheckBox"
                                                  Grid.Column="0"
                                                  Content="Z (скорр.)"
                                                  IsChecked="True"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"
                                                  Checked="ShowZCheckBox_Changed"
                                                  Unchecked="ShowZCheckBox_Changed"/>

                                        <ComboBox x:Name="ProfileColorComboBox"
                                                  Grid.Column="2"
                                                  SelectedIndex="0"
                                                  Width="115"
                                                  Height="26"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding ElementName=ShowZCheckBox, Path=IsChecked}"
                                                  SelectionChanged="ProfileColorComboBox_SelectionChanged">
                                            <ComboBoxItem Content="🔵 Синий" Tag="#005A9E"/>
                                            <ComboBoxItem Content="🟢 Зелёный" Tag="#107C10"/>
                                            <ComboBoxItem Content="🟠 Оранжевый" Tag="#D83B01"/>
                                            <ComboBoxItem Content="🔴 Красный" Tag="#FFF44336"/>
                                            <ComboBoxItem Content="🟣 Фиолетовый" Tag="#8764B8"/>
                                        </ComboBox>
                                    </Grid>

                                    <!-- Z0 график -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="ShowZ0CheckBox"
                                                  Grid.Column="0"
                                                  Content="Z₀ (исход.)"
                                                  IsChecked="True"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"
                                                  Checked="ShowZ0CheckBox_Changed"
                                                  Unchecked="ShowZ0CheckBox_Changed"/>

                                        <ComboBox x:Name="ProfileZ0ColorComboBox"
                                                  Grid.Column="2"
                                                  SelectedIndex="0"
                                                  Width="115"
                                                  Height="26"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"
                                                  IsEnabled="{Binding ElementName=ShowZ0CheckBox, Path=IsChecked}"
                                                  SelectionChanged="ProfileZ0ColorComboBox_SelectionChanged">
                                            <ComboBoxItem Content="⚫ Серый" Tag="#808080"/>
                                            <ComboBoxItem Content="🔵 Голубой" Tag="#00B7C3"/>
                                            <ComboBoxItem Content="🟤 Коричневый" Tag="#8B4513"/>
                                            <ComboBoxItem Content="🔴 Розовый" Tag="#FF69B4"/>
                                        </ComboBox>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Группа: Масштаб -->
                            <Border Grid.Column="2"
                                    Background="White"
                                    BorderBrush="#FFE0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12,10">
                                <StackPanel>
                                    <TextBlock Text="📏 Масштаб"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="#505050"
                                               Margin="0,0,0,8"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Min -->
                                        <TextBlock Grid.Column="0"
                                                   Text="min:"
                                                   VerticalAlignment="Center"
                                                   FontSize="11"
                                                   Foreground="#707070"/>
                                        <TextBox x:Name="MinHeightTextBox"
                                                 Grid.Column="2"
                                                 Height="26"
                                                 FontSize="11"
                                                 VerticalContentAlignment="Center"
                                                 Padding="6,0"
                                                 BorderBrush="#FFC0C0C0"
                                                 TextChanged="HeightLimitTextBox_TextChanged"/>

                                        <!-- Max -->
                                        <TextBlock Grid.Column="4"
                                                   Text="max:"
                                                   VerticalAlignment="Center"
                                                   FontSize="11"
                                                   Foreground="#707070"/>
                                        <TextBox x:Name="MaxHeightTextBox"
                                                 Grid.Column="6"
                                                 Height="26"
                                                 FontSize="11"
                                                 VerticalContentAlignment="Center"
                                                 Padding="6,0"
                                                 BorderBrush="#FFC0C0C0"
                                                 TextChanged="HeightLimitTextBox_TextChanged"/>

                                        <!-- Кнопка Авто -->
                                        <Button Grid.Column="8"
                                                Content="🔄 Авто"
                                                FontSize="11"
                                                Height="26"
                                                Padding="12,0"
                                                Click="AutoScaleButton_Click"
                                                ToolTip="Автоматический масштаб">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#FFE8F4F8"/>
                                                    <Setter Property="Foreground" Value="#0078D4"/>
                                                    <Setter Property="BorderBrush" Value="#FFADD8E6"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FFD0E8F2"/>
                                                            <Setter Property="BorderBrush" Value="#FF0078D4"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#FFB8DCF0"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Группа: Статистика и анализ -->
                            <Border Grid.Column="4"
                                    Background="White"
                                    BorderBrush="#FFE0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12,10">
                                <StackPanel>
                                    <TextBlock Text="📊 Статистика"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="#505050"
                                               Margin="0,0,0,8"/>

                                    <!-- Высоты -->
                                    <TextBlock FontSize="10" Foreground="#606060" Margin="0,0,0,2">
                                        <Run Text="Высоты: min="/><Run x:Name="StatsMinHeight" FontWeight="SemiBold" Text="—"/>
                                        <Run Text=" max="/><Run x:Name="StatsMaxHeight" FontWeight="SemiBold" Text="—"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" Foreground="#606060" Margin="0,0,0,6">
                                        <Run Text="          μ="/><Run x:Name="StatsMeanHeight" FontWeight="SemiBold" Text="—"/>
                                        <Run Text=" σ="/><Run x:Name="StatsStdDevHeight" FontWeight="SemiBold" Text="—"/>
                                    </TextBlock>

                                    <!-- Превышения -->
                                    <TextBlock FontSize="10" Foreground="#606060" Margin="0,0,0,6">
                                        <Run Text="Превыш: max="/><Run x:Name="StatsMaxDeltaH" FontWeight="SemiBold" Text="—"/>
                                        <Run Text=" μ="/><Run x:Name="StatsMeanDeltaH" FontWeight="SemiBold" Text="—"/>
                                    </TextBlock>

                                    <!-- Станции -->
                                    <TextBlock FontSize="10" Foreground="#606060" Margin="0,0,0,8">
                                        <Run Text="Станции: μ="/><Run x:Name="StatsMeanLength" FontWeight="SemiBold" Text="—"/>
                                        <Run Text=" Σ="/><Run x:Name="StatsTotalLength" FontWeight="SemiBold" Text="—"/>
                                    </TextBlock>

                                    <!-- Аномалии (упрощённо) -->
                                    <Separator Margin="0,0,0,8"/>

                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="ShowAnomaliesCheckBox"
                                                  Grid.Column="0"
                                                  Content="Аномалии"
                                                  IsChecked="True"
                                                  FontSize="10"
                                                  VerticalAlignment="Center"
                                                  Checked="ShowAnomaliesCheckBox_Changed"
                                                  Unchecked="ShowAnomaliesCheckBox_Changed"/>

                                        <TextBlock Grid.Column="2"
                                                   VerticalAlignment="Center"
                                                   FontSize="10"
                                                   FontWeight="SemiBold">
                                            <Run x:Name="AnomaliesCountIcon" Text="⚠" Foreground="#FFC107"/>
                                            <Run x:Name="AnomaliesCountText" Text=" 0" Foreground="#606060"/>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Настройки анализа -->
                                    <TextBlock Text="Допуск (σ):"
                                               FontSize="9"
                                               Foreground="#707070"
                                               Margin="0,4,0,2"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <Slider x:Name="SensitivitySlider"
                                                Grid.Column="0"
                                                Minimum="1.5"
                                                Maximum="4.0"
                                                Value="2.5"
                                                TickFrequency="0.5"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"
                                                ValueChanged="SensitivitySlider_ValueChanged"/>

                                        <TextBlock Grid.Column="2"
                                                   x:Name="SensitivityValueText"
                                                   Text="2.5"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>

                                    <TextBlock FontSize="8"
                                               Foreground="#909090"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"
                                               Text="1.5σ = более чувствительно&#x0a;4.0σ = менее чувствительно"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
