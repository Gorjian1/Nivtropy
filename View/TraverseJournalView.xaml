<UserControl x:Class="Nivtropy.Views.TraverseJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Nivtropy.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="RootControl">
    <UserControl.Resources>
        <converters:MethodDeltaConverter x:Key="MethodDeltaConverter" />
        <converters:GroupClosureConverter x:Key="GroupClosureConverter" />
        <converters:ArmDifferenceExceededToBrushConverter x:Key="ArmDifferenceExceededToBrushConverter" />
        <converters:GridLineColorConverter x:Key="GridLineColorConverter" />
        <converters:RowBackgroundConverter x:Key="RowBackgroundConverter" />
        <converters:JournalStationCountConverter x:Key="JournalStationCountConverter" />
        <converters:JournalRowBorderConverter x:Key="JournalRowBorderConverter" />
        <CollectionViewSource x:Key="JournalRowsGrouped" Source="{Binding JournalRows}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LineName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="8,8,8,4"
                    Orientation="Horizontal">
            <TextBlock Text="Журнал нивелирного хода"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Margin="24,0,0,0">
                <TextBlock Text="Метод:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Calculation.SelectedMethod.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                <TextBlock Text="Класс:" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Calculation.SelectedClass.Display}"
                           FontWeight="SemiBold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <!-- Панель статистики с иконками -->
        <StackPanel Grid.Row="1" Margin="8,4,8,4" Orientation="Horizontal">
            <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#0078D4" />
            <TextBlock Text="Станций:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.StationsCount}" Margin="4,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#D83B01" />
            <TextBlock Text="ΣΔh:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.Closure, StringFormat=+0.0000;-0.0000;0.0000}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Calculation.IsClosureWithinTolerance}" Value="True">
                                <Setter Property="Foreground" Value="#107C10" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Calculation.IsClosureWithinTolerance}" Value="False">
                                <Setter Property="Foreground" Value="#FFF44336" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#8764B8" />
            <TextBlock Text="Допуск:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.AllowableClosure, StringFormat=±0.0000}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="•" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="#707070" />

            <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="#00B7C3" />
            <TextBlock Text="Длина:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="4,0,0,0" />
            <TextBlock Text="{Binding Calculation.TotalAverageLength, StringFormat=0.00}" Margin="4,0,4,0" VerticalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Text="м" VerticalAlignment="Center" Foreground="#707070" />
        </StackPanel>

        <Border Grid.Row="2" Margin="8" BorderBrush="#FFB0B0B0" BorderThickness="1">
            <DataGrid ItemsSource="{Binding Source={StaticResource JournalRowsGrouped}}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="0"
                      RowHeaderWidth="0"
                      EnableRowVirtualization="True"
                      SelectionUnit="FullRow"
                      FontFamily="{Binding Settings.TableFontFamily}"
                      FontSize="{Binding Settings.TableFontSize}"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}"
                      HorizontalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="AlternatingRowBackground" Value="Transparent" />
                        <Setter Property="Background" Value="White" />
                    </Style>
                </DataGrid.Style>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Setter Property="Padding" Value="4,8,4,8" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FAFAFA" />
                        <Setter Property="Foreground" Value="#202020" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8,10,8,10" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                        <Setter Property="BorderBrush" Value="#E1E1E1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="MinHeight" Value="32" />
                        <Setter Property="Background">
                            <Setter.Value>
                                <MultiBinding Converter="{StaticResource RowBackgroundConverter}">
                                    <Binding Path="DataContext.Settings.RowColoringMode" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                    <Binding Path="StationNumber" />
                                    <Binding Path="LineSummary.RecordCount" />
                                </MultiBinding>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderThickness" Value="{Binding RowType, Converter={StaticResource JournalRowBorderConverter}}" />
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Margin" Value="0,4,0,0" />
                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#F5F8FA" BorderBrush="#D0D8E0" BorderThickness="1" Padding="8" CornerRadius="3">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="White" />
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#202020" Margin="8,0,0,0" />
                                        <TextBlock Text=" • Станций: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding ItemCount, Converter={StaticResource JournalStationCountConverter}}" FontWeight="SemiBold" Foreground="#202020" />
                                        <TextBlock Text=" • ΣΔh: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Converter={StaticResource GroupClosureConverter}, StringFormat=+0.0000;-0.0000;0.0000}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />
                                        <TextBlock Text=" • Длина: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.TotalAverageLength, StringFormat=0.00}" FontWeight="Bold" Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />
                                        <TextBlock Text=" • Σ|разность плеч|: " Foreground="#707070" Margin="12,0,0,0" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.ArmDifferenceAccumulation, StringFormat=0.0000}"
                                                   FontWeight="Bold">
                                            <TextBlock.Foreground>
                                                <Binding Path="Items[0].LineSummary.IsArmDifferenceAccumulationExceeded"
                                                         Converter="{StaticResource ArmDifferenceExceededToBrushConverter}" />
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock Text=" м" Foreground="#707070" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <DataGridRowsPresenter />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </DataGrid.GroupStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding StationNumberDisplay}" Width="50">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE8EF;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#707070" VerticalAlignment="Center" />
                                    <TextBlock Text="№" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding PointCode}" Width="1.2*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#0078D4" VerticalAlignment="Center" />
                                    <TextBlock Text="Точка" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding StationLengthDisplay}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xECC6;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#00B7C3" VerticalAlignment="Center" />
                                    <TextBlock Text="Длина ст., м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding DeltaHDisplay}" Width="*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xEE4A;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#0099BC" VerticalAlignment="Center" />
                                    <TextBlock Text="Δh, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding CorrectionDisplay}" Width="*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#D83B01" VerticalAlignment="Center" />
                                    <TextBlock Text="Поправка, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding AdjustedDeltaHDisplay}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#107C10" VerticalAlignment="Center" />
                                    <TextBlock Text="Δh испр., м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Z0Display}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#FF9E9E9E" VerticalAlignment="Center" />
                                    <TextBlock Text="Z0, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding ZDisplay}" Width="1.1*">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE707;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0" Foreground="#005A9E" VerticalAlignment="Center" />
                                    <TextBlock Text="Z, м" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
