<UserControl x:Class="Nivtropy.Views.TraverseJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Nivtropy.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:GridLineColorConverter x:Key="GridLineColorConverter" />
        <converters:JournalStationCountConverter x:Key="JournalStationCountConverter" />
        <converters:JournalRowBorderConverter x:Key="JournalRowBorderConverter" />
        <converters:GroupClosureConverter x:Key="GroupClosureConverter" />
        <CollectionViewSource x:Key="JournalRowsGrouped" Source="{Binding JournalRows}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LineName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="8,8,8,4" Orientation="Horizontal">
            <TextBlock Text="Журнал нивелирования"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
            <TextBlock Text=" • " Margin="12,0" Foreground="#FF606060" VerticalAlignment="Center"/>
            <TextBlock Text="Классический журнальный формат"
                       FontSize="11"
                       Foreground="#FF606060"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- DataGrid с журнальными данными -->
        <Border Grid.Row="1" Margin="8" BorderBrush="#FFB0B0B0" BorderThickness="1">
            <DataGrid ItemsSource="{Binding Source={StaticResource JournalRowsGrouped}}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="0"
                      RowHeaderWidth="0"
                      EnableRowVirtualization="True"
                      SelectionUnit="FullRow"
                      FontFamily="{Binding Settings.TableFontFamily}"
                      FontSize="{Binding Settings.TableFontSize}"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="{Binding Settings.GridLineColorIndex, Converter={StaticResource GridLineColorConverter}}"
                      HorizontalGridLinesBrush="#E1E1E1">

                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="AlternatingRowBackground" Value="Transparent" />
                    </Style>
                </DataGrid.Style>

                <!-- Стили для ячеек -->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Setter Property="Padding" Value="4,6,4,6" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>

                <!-- Стили для заголовков -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FAFAFA" />
                        <Setter Property="Foreground" Value="#202020" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8,10,8,10" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                        <Setter Property="BorderBrush" Value="#E1E1E1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Стили для строк с визуальным разделением станций -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="MinHeight" Value="28" />
                        <Setter Property="Background" Value="White" />
                        <Setter Property="BorderBrush" Value="#E1E1E1" />
                        <Setter Property="BorderThickness" Value="{Binding RowType, Converter={StaticResource JournalRowBorderConverter}}" />
                    </Style>
                </DataGrid.RowStyle>

                <!-- Группировка по ходам -->
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Margin" Value="0,4,0,0" />
                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#F5F8FA" BorderBrush="#D0D8E0" BorderThickness="1" Padding="8" CornerRadius="3">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" Foreground="#0078D4" VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#202020" />

                                        <TextBlock Text=" • Станций: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding ItemCount, Converter={StaticResource JournalStationCountConverter}}" FontWeight="SemiBold" Foreground="#202020" />

                                        <TextBlock Text=" • ΣΔh: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Converter={StaticResource GroupClosureConverter}, StringFormat=+0.0000;-0.0000;0.0000}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />

                                        <TextBlock Text=" • Длина: " Margin="12,0,0,0" Foreground="#707070" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.TotalAverageLength, StringFormat=0.00}" FontWeight="SemiBold" Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />

                                        <TextBlock Text=" • Σ|разность плеч|: " Foreground="#707070" Margin="12,0,0,0" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.ArmDifferenceAccumulation, StringFormat=0.0000}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#707070" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <DataGridRowsPresenter />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </DataGrid.GroupStyle>

                <!-- Колонки -->
                <DataGrid.Columns>
                    <!-- Станция № -->
                    <DataGridTextColumn Header="Станция №" Binding="{Binding StationNumberDisplay}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Foreground" Value="#0078D4" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Точка -->
                    <DataGridTextColumn Header="Точка" Binding="{Binding PointCode}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Длина станции -->
                    <DataGridTextColumn Header="Длина ст., м" Binding="{Binding StationLengthDisplay}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#00B7C3" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Группа: Превышения -->
                    <!-- Δh, м -->
                    <DataGridTextColumn Header="Δh, м" Binding="{Binding DeltaHDisplay}" Width="95">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#0099BC" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Поправка, м -->
                    <DataGridTextColumn Header="Попр., м" Binding="{Binding CorrectionDisplay}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#D83B01" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Δh испр., м -->
                    <DataGridTextColumn Header="Δh испр., м" Binding="{Binding AdjustedDeltaHDisplay}" Width="105">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#107C10" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Группа: Высоты -->
                    <!-- Z0, м -->
                    <DataGridTextColumn Header="Z0, м" Binding="{Binding Z0Display}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#FF9E9E9E" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Z, м -->
                    <DataGridTextColumn Header="Z, м" Binding="{Binding ZDisplay}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#005A9E" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
