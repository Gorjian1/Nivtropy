<UserControl x:Class="Nivtropy.Views.TraverseJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Nivtropy.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:GridLineColorConverter x:Key="GridLineColorConverter" />
        <converters:JournalStationCountConverter x:Key="JournalStationCountConverter" />
        <converters:JournalRowBorderConverter x:Key="JournalRowBorderConverter" />
        <converters:GroupClosureConverter x:Key="GroupClosureConverter" />
        <CollectionViewSource x:Key="JournalRowsGrouped" Source="{Binding JournalRows}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LineName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Шапка с контролами -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E1E4E8" BorderThickness="0,0,0,1" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Первая строка: заголовок и параметры -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE81D;" FontFamily="Segoe MDL2 Assets" FontSize="18" Margin="0,0,8,0" Foreground="#0078D4" VerticalAlignment="Center" />
                        <TextBlock Text="Журнал нивелирования"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Установка высот -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0" Foreground="#0078D4" VerticalAlignment="Center" />
                        <TextBlock Text="Установка высот:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <Button Content="Добавить репер..."
                                Padding="8,4"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005A9E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Вторая строка: метод и класс -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <!-- Метод -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Метод:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <ComboBox ItemsSource="{Binding Methods}"
                                  SelectedItem="{Binding SelectedMethod}"
                                  DisplayMemberPath="Description"
                                  MinWidth="220"
                                  VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Класс -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Класс:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <ComboBox ItemsSource="{Binding Classes}"
                                  SelectedItem="{Binding SelectedClass}"
                                  DisplayMemberPath="Description"
                                  MinWidth="200"
                                  VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid с журнальными данными -->
        <Border Grid.Row="1" Margin="0" BorderBrush="#DEE2E6" BorderThickness="1,0,1,1">
            <DataGrid ItemsSource="{Binding Source={StaticResource JournalRowsGrouped}}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="0"
                      RowHeaderWidth="0"
                      EnableRowVirtualization="True"
                      SelectionUnit="FullRow"
                      FontFamily="{Binding Settings.TableFontFamily}"
                      FontSize="{Binding Settings.TableFontSize}"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="#E9ECEF"
                      HorizontalGridLinesBrush="#E9ECEF">

                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="AlternatingRowBackground" Value="Transparent" />
                        <Setter Property="Background" Value="White" />
                    </Style>
                </DataGrid.Style>

                <!-- Стили для ячеек -->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Setter Property="Padding" Value="8,6" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>

                <!-- Стили для заголовков -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA" />
                        <Setter Property="Foreground" Value="#202020" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8,12" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                        <Setter Property="BorderBrush" Value="#DEE2E6" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Стили для строк -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="MinHeight" Value="32" />
                        <Setter Property="Background" Value="White" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="{Binding RowType, Converter={StaticResource JournalRowBorderConverter}}" />
                    </Style>
                </DataGrid.RowStyle>

                <!-- Группировка по ходам -->
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Margin" Value="0,8,0,0" />
                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#E8F4F8" BorderBrush="#B8D4E0" BorderThickness="0,1,0,1" Padding="12,8">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" Foreground="#0078D4" VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" Foreground="#202020" />

                                        <TextBlock Text=" • Станций: " Margin="16,0,0,0" Foreground="#555" />
                                        <TextBlock Text="{Binding ItemCount, Converter={StaticResource JournalStationCountConverter}}" FontWeight="SemiBold" Foreground="#202020" />

                                        <TextBlock Text=" • ΣΔh: " Margin="16,0,0,0" Foreground="#555" />
                                        <TextBlock Text="{Binding Converter={StaticResource GroupClosureConverter}, StringFormat=+0.0000;-0.0000;0.0000}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#555" />

                                        <TextBlock Text=" • Длина: " Margin="16,0,0,0" Foreground="#555" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.TotalAverageLength, StringFormat=0.00}" FontWeight="SemiBold" Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#555" />

                                        <TextBlock Text=" • Σ|разность плеч|: " Foreground="#555" Margin="16,0,0,0" />
                                        <TextBlock Text="{Binding Items[0].LineSummary.ArmDifferenceAccumulation, StringFormat=0.0000}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#0078D4" />
                                        <TextBlock Text=" м" Foreground="#555" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <DataGridRowsPresenter />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </DataGrid.GroupStyle>

                <!-- Колонки с равномерным распределением -->
                <DataGrid.Columns>
                    <!-- Станция № -->
                    <DataGridTextColumn Header="Станция №" Binding="{Binding StationNumberDisplay}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Foreground" Value="#0078D4" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Точка -->
                    <DataGridTextColumn Header="Точка" Binding="{Binding PointCode}" Width="1.2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Длина станции -->
                    <DataGridTextColumn Header="Длина ст., м" Binding="{Binding StationLengthDisplay}" Width="1.1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#00B7C3" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Δh, м -->
                    <DataGridTextColumn Header="Δh, м" Binding="{Binding DeltaHDisplay}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#0099BC" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Поправка, м -->
                    <DataGridTextColumn Header="Попр., м" Binding="{Binding CorrectionDisplay}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#D83B01" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Δh испр., м -->
                    <DataGridTextColumn Header="Δh испр., м" Binding="{Binding AdjustedDeltaHDisplay}" Width="1.1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#107C10" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Z0, м -->
                    <DataGridTextColumn Header="Z0, м" Binding="{Binding Z0Display}" Width="1.1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#9E9E9E" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Z, м -->
                    <DataGridTextColumn Header="Z, м" Binding="{Binding ZDisplay}" Width="1.1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#005A9E" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
