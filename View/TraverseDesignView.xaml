<UserControl x:Class="Nivtropy.Views.TraverseDesignView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FFF7F7F7"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           Text="Начальная отметка:" />
                <TextBox Grid.Column="1"
                         Margin="4,0,0,0"
                         Text="{Binding StartElevationText, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Column="3"
                           VerticalAlignment="Center"
                           Text="Конечная отметка:" />
                <TextBox Grid.Column="4"
                         Margin="4,0,0,0"
                         Text="{Binding DesiredEndElevationText, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Grid.Column="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Проектировать"
                            Width="140"
                            Margin="8,0,0,0"
                            Command="{Binding GenerateDesignCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Steps}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  SelectionUnit="FullRow"
                  AlternationCount="2"
                  RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50" />
                <DataGridTextColumn Header="Точка" Binding="{Binding Point}" Width="160" />
                <DataGridTextColumn Header="Mode" Binding="{Binding Mode}" Width="90" />
                <DataGridTextColumn Header="Δh текущее" Binding="{Binding OriginalDeltaDisplay}" Width="130" />
                <DataGridTextColumn Header="Поправка" Binding="{Binding AdjustmentDisplay}" Width="130" />
                <DataGridTextColumn Header="Δh проект" Binding="{Binding ProjectedDeltaDisplay}" Width="130" />
                <DataGridTextColumn Header="Отметка, м" Binding="{Binding ProjectedElevationDisplay}" Width="120" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBox Grid.Row="2"
                 Margin="0,8,0,0"
                 Text="{Binding DesignSummary}"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="#FF2F2F2F"
                 AcceptsReturn="True" />
    </Grid>
</UserControl>
