<Window x:Class="Nivtropy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nivtropy"
        mc:Ignorable="d"
        Title="Nivtropy" Height="720" Width="1180">
    <DockPanel>
        <!-- Ribbon-style: TabControl + ToolBars -->
        <TabControl DockPanel.Dock="Top"
                    Margin="0"
                    SelectedIndex="{Binding SelectedRibbonIndex, Mode=TwoWay}">
            <TabControl.ItemContainerStyle>
                <!-- стиль для TabItem из App.xaml -->
                <Style TargetType="TabItem" BasedOn="{StaticResource RibbonTabHeaderStyle}" />
            </TabControl.ItemContainerStyle>

            <TabItem Header="Главная">
                <ToolBarTray>
                    <ToolBar>
                        <Button Content="Открыть файл"
                                Command="{Binding OpenFileCommand}"/>
                        <Separator/>
                        <Button Content="Обновить"
                                Command="{Binding RefreshCommand}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>

            <TabItem Header="Расчёты">
                <ToolBarTray>
                    <ToolBar>
                        <Label Content="Метод:"/>
                        <ComboBox Width="140"
                                  ItemsSource="{Binding CalculationViewModel.Methods}"
                                  SelectedItem="{Binding CalculationViewModel.SelectedMethod, Mode=TwoWay}"
                                  DisplayMemberPath="Display"/>
                        <Separator/>
                        <Label Content="Класс:"/>
                        <ComboBox Width="160"
                                  ItemsSource="{Binding CalculationViewModel.Classes}"
                                  SelectedItem="{Binding CalculationViewModel.SelectedClass, Mode=TwoWay}"
                                  DisplayMemberPath="Display"
                                  ToolTip="Выбор допуска по классу"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>

            <TabItem Header="Проектирование">
                <ToolBarTray>
                    <ToolBar>
                        <Label Content="Ход:"/>
                        <ComboBox Width="200"
                                  ItemsSource="{Binding DataViewModel.Runs}"
                                  SelectedItem="{Binding DesignViewModel.SelectedRun, Mode=TwoWay}"
                                  DisplayMemberPath="Header"/>
                        <Separator/>
                        <Label Content="Целевая ΣΔh:"/>
                        <TextBox Width="100"
                                 Text="{Binding DesignViewModel.TargetClosure, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F4}"/>
                        <Separator/>
                        <Label Content="Начальная отметка:"/>
                        <TextBox Width="100"
                                 Text="{Binding DesignViewModel.StartHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>
        </TabControl>

        <!-- Основная область -->
        <ContentControl Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>
