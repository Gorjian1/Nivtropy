<Window x:Class="Nivtropy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nivtropy"
        mc:Ignorable="d"
        Title="Nivtropy" Height="720" Width="1180" WindowState="Maximized">
    <DockPanel>
        <!-- Ribbon-style: TabControl + ToolBars -->
        <TabControl DockPanel.Dock="Top"
                    Margin="0"
                    SelectedIndex="{Binding SelectedRibbonIndex, Mode=TwoWay}">
            <TabControl.ItemContainerStyle>
                <!-- стиль для TabItem из App.xaml -->
                <Style TargetType="TabItem" BasedOn="{StaticResource RibbonTabHeaderStyle}" />
            </TabControl.ItemContainerStyle>

            <TabItem Header="Главная">
                <ToolBarTray>
                    <ToolBar>
                        <Button Content="Открыть файл"
                                Command="{Binding OpenFileCommand}"/>
                        <Separator/>
                        <Button Content="Обновить"
                                Command="{Binding RefreshCommand}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>

            <TabItem Header="Расчёты">
                <ToolBarTray>
                    <ToolBar>
                        <Label Content="Метод:"/>
                        <ComboBox Width="140"
                                  ItemsSource="{Binding CalculationViewModel.Methods}"
                                  SelectedItem="{Binding CalculationViewModel.SelectedMethod, Mode=TwoWay}"
                                  DisplayMemberPath="Display"/>
                        <Separator/>
                        <Label Content="Класс:"/>
                        <ComboBox Width="160"
                                  ItemsSource="{Binding CalculationViewModel.Classes}"
                                  SelectedItem="{Binding CalculationViewModel.SelectedClass, Mode=TwoWay}"
                                  DisplayMemberPath="Display"
                                  ToolTip="Выбор допуска по классу"/>
                    </ToolBar>

                    <!-- Панель управления реперами -->
                    <ToolBar>
                        <Grid>
                            <!-- Компактная плашка для ввода -->
                            <Border BorderBrush="#FFB0B0B0" BorderThickness="1" CornerRadius="3" Padding="6,2" Background="White">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Кнопка для показа списка -->
                                    <Button x:Name="ToggleBenchmarksButton"
                                            Content="&#xE70D;"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="12"
                                            Width="20" Height="24"
                                            Margin="0,0,4,0"
                                            Click="ToggleBenchmarksButton_Click"
                                            ToolTip="Показать/скрыть список реперов"
                                            VerticalAlignment="Center"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="#FF606060"/>

                                    <Label Content="Реперы:" Padding="0" VerticalAlignment="Center"/>
                                    <ComboBox Width="126" Margin="6,0,0,0"
                                              ItemsSource="{Binding CalculationViewModel.AvailablePoints}"
                                              SelectedItem="{Binding CalculationViewModel.SelectedPoint, Mode=TwoWay}"
                                              DisplayMemberPath="DisplayName"
                                              ToolTip="Выберите точку для установки известной высоты"
                                              VerticalAlignment="Center"/>
                                    <Label Content="H:" Padding="0" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    <TextBox x:Name="BenchmarkHeightTextBox"
                                             Width="70" Margin="4,0,0,0"
                                             Text="{Binding CalculationViewModel.NewBenchmarkHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             ToolTip="Введите известную высоту репера (Enter для добавления)"
                                             KeyDown="BenchmarkHeightTextBox_KeyDown"
                                             VerticalAlignment="Center"
                                             VerticalContentAlignment="Center"/>
                                    <Button Content="&#xE710;"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="14"
                                            Width="24" Height="24"
                                            Margin="4,0,0,0"
                                            Command="{Binding CalculationViewModel.AddBenchmarkCommand}"
                                            ToolTip="Добавить репер"
                                            VerticalAlignment="Center"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Foreground" Value="#FF4CAF50"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Foreground" Value="#FF388E3C"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Foreground" Value="#FFCCCCCC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Выпадающий список реперов -->
                            <Border x:Name="BenchmarksListPopup"
                                    Visibility="Collapsed"
                                    Background="White"
                                    BorderBrush="#FFB0B0B0"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="0,32,0,0"
                                    MaxHeight="200"
                                    MinWidth="300"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Panel.ZIndex="1000">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding CalculationViewModel.Benchmarks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="8,6">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Code}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                            <TextBlock Text=" → " Margin="6,0" Foreground="#FF606060" VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Height, StringFormat=F4}" VerticalAlignment="Center"/>
                                                            <TextBlock Text=" м" Foreground="#FF606060" VerticalAlignment="Center"/>
                                                        </StackPanel>

                                                        <Button Grid.Column="1"
                                                                Content="&#xE711;"
                                                                FontFamily="Segoe MDL2 Assets"
                                                                FontSize="14"
                                                                Width="20" Height="20"
                                                                Padding="0"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                ToolTip="Удалить репер"
                                                                Click="RemoveBenchmark_Click"
                                                                Tag="{Binding}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Foreground" Value="#FFF44336"/>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Foreground" Value="#FFD32F2F"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.Style>
                                            <Style TargetType="ItemsControl">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CalculationViewModel.Benchmarks.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Style>
                                    </ItemsControl>
                                </ScrollViewer>
                                <!-- Сообщение когда список пуст -->
                                <TextBlock Text="Нет установленных реперов"
                                           Foreground="#FF999999"
                                           FontStyle="Italic"
                                           Padding="8"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CalculationViewModel.Benchmarks.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </Grid>

                        <Separator/>
                        <Button Content="Экспорт в Excel"
                                Command="{Binding CalculationViewModel.ExportCommand}"
                                ToolTip="Экспортировать данные в Excel"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>

            <TabItem Header="Проектирование">
                <ToolBarTray>
                    <ToolBar>
                        <Label Content="Ход:"/>
                        <ComboBox Width="200"
                                  ItemsSource="{Binding DataViewModel.Runs}"
                                  SelectedItem="{Binding DesignViewModel.SelectedRun, Mode=TwoWay}"
                                  DisplayMemberPath="Header"/>
                        <Separator/>
                        <Label Content="Целевая ΣΔh:"/>
                        <TextBox Width="100"
                                 Text="{Binding DesignViewModel.TargetClosure, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F4}"/>
                        <Separator/>
                        <Label Content="Начальная отметка:"/>
                        <TextBox Width="100"
                                 Text="{Binding DesignViewModel.StartHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>

            <TabItem Header="Настройки">
                <ToolBarTray>
                    <!-- Пока пустая панель инструментов для настроек -->
                </ToolBarTray>
            </TabItem>
        </TabControl>

        <!-- Основная область -->
        <ContentControl Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>
