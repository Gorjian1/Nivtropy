<Window x:Class="Nivtropy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nivtropy"
        mc:Ignorable="d"
        Title="Nivtropy" Height="720" Width="1180">
    <DockPanel>
        <!-- Ribbon-style: TabControl + ToolBars -->
        <TabControl DockPanel.Dock="Top" Margin="0">
            <TabControl.ItemContainerStyle>
                <!-- стиль для TabItem из App.xaml -->
                <Style TargetType="TabItem" BasedOn="{StaticResource RibbonTabHeaderStyle}" />
            </TabControl.ItemContainerStyle>

            <TabItem Header="Главная">
                <ToolBarTray>
                    <ToolBar>
                        <Button Content="Открыть файл"
                                Command="{Binding OpenFileCommand}"/>
                        <Separator/>
                        <Button Content="Обновить"
                                Command="{Binding RefreshCommand}"/>
                        <Button Content="Экспорт CSV"
                                Command="{Binding ExportCsvCommand}"/>
                    </ToolBar>
                    <ToolBar>
                        <Label Content="Ход:"/>
                        <ComboBox Width="240"
                                  ItemsSource="{Binding DataViewModel.Runs}"
                                  SelectedItem="{Binding SelectedRun}"
                                  DisplayMemberPath="Header"
                                  ToolTipService.ShowDuration="20000"/>
                        <Separator/>
                        <Button Content="Проверка допуска"
                                Command="{Binding CheckToleranceCommand}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>

            <TabItem Header="Вид">
                <ToolBarTray>
                    <ToolBar>
                        <CheckBox Content="Показывать Z"
                                  IsChecked="{Binding ShowZ}"/>
                        <CheckBox Content="Только валидные"
                                  IsChecked="{Binding OnlyValid}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>
        </TabControl>

        <!-- Основная область -->
        <ContentControl Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>
