<Window x:Class="Nivtropy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nivtropy"
        mc:Ignorable="d"
        Title="Nivtropy" Height="720" Width="1180" WindowState="Maximized">
    <DockPanel>
        <!-- Ribbon-style: TabControl + ToolBars -->
        <TabControl DockPanel.Dock="Top"
                    Margin="0"
                    SelectedIndex="{Binding SelectedRibbonIndex, Mode=TwoWay}">
            <TabControl.ItemContainerStyle>
                <!-- стиль для TabItem из App.xaml -->
                <Style TargetType="TabItem" BasedOn="{StaticResource RibbonTabHeaderStyle}" />
            </TabControl.ItemContainerStyle>

            <TabItem Header="Главная">
                <ToolBarTray>
                    <ToolBar>
                        <Button Content="Открыть файл"
                                Command="{Binding OpenFileCommand}"/>
                        <Separator/>
                        <Button Content="Обновить"
                                Command="{Binding RefreshCommand}"/>
                        <Separator/>
                        <Button Content="О программе"
                                Command="{Binding ShowAboutCommand}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>
            <TabItem Header="Журнал">
                <!-- Управление перенесено в правую панель TraverseJournalView -->
            </TabItem>

            <TabItem Header="Проектирование">
                <ToolBarTray>
                    <ToolBar>
                        <Button Content="Открыть файл с данными"
                                Command="{Binding DataGeneratorViewModel.OpenFileCommand}"/>
                    </ToolBar>
                </ToolBarTray>
            </TabItem>

            <TabItem Header="Настройки">
                <ToolBarTray>
                    <!-- Пока пустая панель инструментов для настроек -->
                </ToolBarTray>
            </TabItem>
        </TabControl>

        <!-- Основная область -->
        <ContentControl Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>
