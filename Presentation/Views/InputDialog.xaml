<Window x:Class="Nivtropy.Presentation.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}"
        Width="400"
        Height="180"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF5F5F5"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок/Вопрос -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Question}"
                   FontSize="12"
                   TextWrapping="Wrap" />

        <!-- Поле ввода -->
        <TextBox Grid.Row="2"
                 x:Name="ResponseTextBox"
                 Text="{Binding ResponseText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="12"
                 Padding="6,4"
                 VerticalContentAlignment="Center"
                 Background="White"
                 BorderBrush="#FFACACAC"
                 BorderThickness="1" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Click="OK_Click"
                    IsDefault="True"
                    MinWidth="80"
                    Padding="12,6"
                    Margin="0,0,8,0"
                    FontSize="11"
                    Background="White"
                    BorderBrush="#FFACACAC"
                    BorderThickness="1"
                    Cursor="Hand" />
            <Button Content="Отмена"
                    Click="Cancel_Click"
                    IsCancel="True"
                    MinWidth="80"
                    Padding="12,6"
                    FontSize="11"
                    Background="White"
                    BorderBrush="#FFACACAC"
                    BorderThickness="1"
                    Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>
